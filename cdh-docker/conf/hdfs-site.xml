<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

  <property>
    <name>dfs.replication</name>
    <value>1</value>
  </property>

  <!--
       IMPORTANT
       Set dfs permissions to false
       Enable other users than 'hdfs/hdfs'
       to launch the file system
  -->
  <property>
    <name>dfs.permissions</name>
    <value>false</value>
  </property>

  <!--
       Default hdfs file system path settings
  -->
  <property>
     <name>hadoop.tmp.dir</name>
     <value>/var/lib/hadoop-hdfs</value>
  </property>

  <property>
     <name>dfs.namenode.name.dir</name>
     <value>/var/lib/hadoop-hdfs/name</value>
  </property>

  <property>
     <name>dfs.namenode.checkpoint.dir</name>
     <value>/var/lib/hadoop-hdfs/secondary</value>
  </property>

  <property>
     <name>dfs.datanode.data.dir</name>
     <value>/var/lib/hadoop-hdfs/data</value>
  </property>

</configuration>
